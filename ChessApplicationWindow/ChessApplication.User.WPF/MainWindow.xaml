        <Button x:Name="A6Button" Grid.Column="0" Grid.Row="1" Margin="364,475,174,34" Visibility="Visible" FontSize="50" Background="white"></Button>
        <Button x:Name="A7Button" Grid.Column="0" Grid.Row="1" Margin="426,475,112,34" Visibility="Visible" FontSize="50" Background="black"></Button>
        <Button x:Name="A8Button" Grid.Column="0" Grid.Row="1" Margin="488,475,47,34" Visibility="Visible" FontSize="50" Background="white"></Button>


        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

    </Grid>
</Window>
