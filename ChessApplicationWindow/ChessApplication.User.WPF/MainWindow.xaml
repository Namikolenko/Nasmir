        <Button x:Name="A1Button" Grid.Column="0" Grid.Row="1" Margin="49,475,486,34" Visibility="Visible" FontSize="50" Background="black"></Button>
        <Button x:Name="A2Button" Grid.Column="0" Grid.Row="1" Margin="114,475,425,34" Visibility="Visible" FontSize="50" Background="White"></Button>
